<head>
    <link rel="stylesheet" href="../public/Styles/login.css">
    <style>
body {
    background: #dddddd;
    overflow-y: hidden;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    /* flex-direction: column; */
}

/* Login box styling */
.login-box {
    background: #ffffff;
    border-radius: 5px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    padding: 1rem 1rem 1rem 1rem;
    width: 35rem;
    text-align: center;
}

/* Title styling */
.login-title {
    font-size: 2rem;
    margin-bottom: 20px;
    text-align: center;
    font-weight: bold;
}

/* Input field styling */
.login-input {
    text-align: center;
    width: 80%;
    padding: 10px;
    margin-bottom: 15px;
    border: 1px solid #ccc;
    border-radius: 3px;
    font-size: 16px;
}
.namers{
    width: 38%;
}

/* Login button styling */
.login-button {
    width: 10rem;
    background: #1d1d1d;
    color: #fff;
    padding: 10px;
    border: none;
    border-radius: 3px;
    cursor: pointer;
}
.login-button:hover{
    background-color: #131313;
}

/* Center the button */
.login-button-container {
    text-align: center;
}
    </style>
</head>
<body>
<%- include ('../partials/messages') %>

 <div class="container">
    <form action="/users/login" method="POST">
    <div class="login-box">
        <h2 class="login-title">blackJack Login</h2>
        <input class="login-input" type="text" name="email" id="email" placeholder="Email">
        <input class="login-input" type="password" name="password" id="password" placeholder="Enter Password">
        <div class="login-button-container">
            <p>Dont have an account? <a href="/users/register">Sign up</a></p>
            <button type="submit" class="login-button">Login</button>
        </div>
</form>
</body>